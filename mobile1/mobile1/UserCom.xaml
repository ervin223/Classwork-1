// xaml 

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobile1.UserCom">

    <ScrollView>
        <VerticalStackLayout Padding="10">
            <Label Text="Контакты" FontSize="24" HorizontalOptions="Center" />

            <Entry x:Name="PhoneEntry" Placeholder="Введите телефон" Keyboard="Telephone" />
            <Entry x:Name="EmailEntry" Placeholder="Введите email" Keyboard="Email" />
            <Entry x:Name="MessageEntry" Placeholder="Введите сообщение" />

            <Button Text="Отправить SMS" Clicked="Saada_sms_Clicked" />
            <Button Text="Отправить Email" Clicked="Saada_email_Clicked" />
            <Button Text="Позвонить" Clicked="Helista_Clicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
